<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Accueil</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@700;400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/accueil.css">
</head>
<body>
  <div class="navbar">
    <div class="left">
      <h1>Bienvenue, {{ user.name }} ! üëã</h1>
      <p>Tu es connect√© avec l‚Äôemail : {{ user.email }}</p>
    </div>

    <div class="actions">

      <!-- NOTIFS -->
      <div class="notif-container">
        <button type="button" onclick="toggleNotifDropdown()">üîî</button>
        <div class="notif-dropdown" id="notifDropdown">
          {{#if notifications.length}}
            {{#each notifications}}
              {{#if (eq this.type "offer")}}
                {{#if (eq this.offerStatus "en cours")}}
                  <div class="notif-item">
                    <p>{{this.message}}</p>
                    <form method="POST" action="/offers/{{this.offerId}}/accept" style="display:inline;">
                      <button type="submit">‚úÖ Accepter</button>
                    </form>
                    <form method="POST" action="/offers/{{this.offerId}}/reject" style="display:inline;">
                      <button type="submit">‚ùå Refuser</button>
                    </form>
                  </div>
                {{/if}}
              {{/if}}
            {{/each}}
          {{else}}
            <div class="notif-item">Aucune notification</div>
          {{/if}}
        </div>
      </div>

      <form method="GET" action="/creer-projet">
        <button type="submit">Cr√©er un projet üöÄ</button>
      </form>
      <form method="POST" action="/auth/logout">
        <button type="submit">Se d√©connecter</button>
      </form>
      <form method="GET" action="/mes-favoris">
        <button type="submit">Favoris</button>
      </form>
      <a href="/messages">
        <button type="button">üí¨ Messagerie</button>
      </a>
      <a href="/profil">
        <button type="button">üë§ Mon Profil</button>
      </a>
    </div>
  </div>

  {{#if projects.length}}
    <div class="projects-grid">
      {{#each projects}}
        <a href="/projets/{{this.id}}">
          <div class="card">
            <img src="{{#if this.imageurl}}{{this.imageurl}}{{else}}/images/default-project.png{{/if}}" alt="Image du projet">
            <h3>{{this.file}}</h3>
            <p>Montant demand√© : <strong>{{this.amount}} ‚Ç¨</strong></p>
            <div class="card-footer">Voir le projet ‚û°Ô∏è</div>
          </div>
        </a>
      {{/each}}
    </div>
  {{else}}
    <p style="padding: 1rem; text-align: center;">Aucun projet pour le moment.</p>
  {{/if}}

  <script>
    function toggleNotifDropdown() {
      const dropdown = document.getElementById('notifDropdown');
      dropdown.classList.toggle('active');
    }

    window.addEventListener('click', function (e) {
      const notifBtn = document.querySelector('.notif-container button');
      const dropdown = document.getElementById('notifDropdown');
      if (dropdown && !notifBtn.contains(e.target) && !dropdown.contains(e.target)) {
        dropdown.classList.remove('active');
      }
    });
  </script>
</body>
</html>
