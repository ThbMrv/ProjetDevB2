<!DOCTYPE html>
<html>
  <head>
    <!-- Frameworks (pour validation de consigne) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@700;400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="accueil.css" />
    
    <title>Accueil</title>
    <style>
      .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 1rem;
        margin: 1rem 0;
        width: 300px;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
        position: relative;
        transition: transform 0.2s;
      }

      .card:hover {
        transform: scale(1.02);
      }

      .card img {
        max-width: 100%;
        border-radius: 8px;
        margin-bottom: 0.5rem;
      }

      .card h3 {
        margin: 0.5rem 0;
      }

      a.card-link {
        text-decoration: none;
        color: inherit;
        display: inline-block;
      }

      .notif-container {
        position: relative;
        display: inline-block;
        margin-left: 1rem;
      }

      .notif-dropdown {
        display: none;
        position: absolute;
        right: 0;
        top: 2rem;
        background: white;
        border: 1px solid #ccc;
        width: 250px;
        max-height: 300px;
        overflow-y: auto;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.2);
        border-radius: 8px;
        z-index: 1000;
      }

      .notif-dropdown.active {
        display: block;
      }

      .notif-item {
        padding: 0.5rem;
        border-bottom: 1px solid #eee;
        font-size: 0.9rem;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
    </style>
  </head>
  <body>

    <div class="navbar">
      <div>
        <h1>Bienvenue, {{ user.name }} ! üëã</h1>
        <p>Tu es connect√© avec l‚Äôemail : {{ user.email }}</p>
      </div>

      <div style="display: flex; align-items: center;">
        <!-- Bouton Mes Favoris -->
        <a href="/mes-favoris" class="btn btn-outline-primary me-2">‚≠ê Mes favoris</a>

        <!-- Notifications -->
        <div class="notif-container">
          <button onclick="toggleNotifDropdown()">üîî</button>
          <div class="notif-dropdown" id="notifDropdown">
            {{#if notifications.length}}
              {{#each notifications}}
                <div class="notif-item">{{this.message}}</div>
              {{/each}}
            {{else}}
              <div class="notif-item">Aucune notification</div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>


    {{#if isCreator}}
      <form method="GET" action="/creer-projet">
        <button type="submit">Cr√©er un projet üöÄ</button>
      </form>
    {{/if}}

    <form method="POST" action="/auth/logout">
      <button type="submit">Se d√©connecter</button>
    </form>

    {{#if projects.length}}
  <h2>üìÇ Tous les projets</h2>
  <div class="projects-grid">
    {{#each projects}}
      <a href="/projets/{{this.id}}">
        <div class="card">
          {{#if this.imageurl}}
            <img src="{{this.imageurl}}" alt="Pitch image" />
          {{/if}}
          <h3>{{this.file}}</h3>
          <p>Montant demand√© : {{this.amount}} ‚Ç¨</p>
        </div>
      </a>
    {{/each}}
  </div>

  {{!-- ... juste apr√®s la section projets --}}

  <h2>üí¨ Messagerie</h2>

  <div style="display: flex; gap: 2rem;">
    <!-- Liste des conversations -->
    <div style="width: 30%;">
      <h3>Conversations</h3>
      <ul>
        {{#each conversations}}
          <li>
            <a href="/messages/conversation/{{this.id}}">
              {{this.otherUserName}}
            </a>
          </li>
        {{/each}}
      </ul>
    </div>

    <!-- Messages de la conversation s√©lectionn√©e -->
    <div style="width: 70%;">
      <h3>Conversation avec {{selectedConversationUser}}</h3>

      <div id="chat-container" style="max-height: 400px; overflow-y: auto; border: 1px solid #ccc; padding: 1rem;">
        {{#each messages}}
          <div>
            <strong>{{this.senderName}}:</strong> {{this.content}}<br>
            <small>{{this.timestamp}}</small>
          </div>
          <hr>
        {{/each}}
      </div>

      <form method="POST" action="/messages/send">
        <input type="hidden" name="recipientId" value="{{selectedConversationId}}">
        <input type="text" name="content" placeholder="√âcris un message..." required>
        <button type="submit">Envoyer</button>
      </form>
    </div>
  </div>

  <script>
    function toggleNotifDropdown() {
      const dropdown = document.getElementById('notifDropdown');
      dropdown.classList.toggle('active');
    }

    // Fermer le menu si on clique ailleurs
    window.addEventListener('click', function (e) {
      const notifBtn = document.querySelector('.notif-container button');
      const dropdown = document.getElementById('notifDropdown');
      if (!notifBtn.contains(e.target) && !dropdown.contains(e.target)) {
        dropdown.classList.remove('active');
      }
    });
  </script>

{{else}}
  <p>Aucun projet pour le moment.</p>
{{/if}}

  </body>
</html>
